{
  "manifest_version": 3,
  "name": "Smart URL Redirector",
  "version": "4.0",
  "description": "Redirect URLs based on customizable rules with pattern matching support.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"],
  "declarative_net_request": {
    "rule_resources": []
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
